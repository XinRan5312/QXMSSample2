<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="text_common_syle">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="text_big_syle">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="text_small_syle">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ms_bind_card_input_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">#CCCCCC</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="SwitchButtonMD">
        <item name="kswThumbDrawable">@drawable/ios_thumb_selector</item>
        <item name="kswBackColor">@color/ksw_md_back_color</item>
        <item name="kswBackMeasureRatio">1.45</item>
        <item name="kswThumbMarginLeft">-8dp</item>
        <item name="kswThumbMarginTop">-2.5dp</item>
        <item name="kswThumbMarginRight">-8dp</item>
        <item name="kswThumbMarginBottom">-10dp</item>
        <item name="kswThumbWidth">51dp</item>
        <item name="kswThumbHeight">50dp</item>
        <item name="kswBackDrawable">@drawable/ios_back_drawable</item>

    </style>

    <!-- popupwindow 动画 -->
    <style name="Popup_Animation">
        <item name="android:windowEnterAnimation">@anim/popup_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_anim_exit</item>
    </style>
</resources>
